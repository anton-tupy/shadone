doctype html
html(data-theme="shadone")
  head
    title
      | Shadone
    meta[name="viewport" content="width=device-width,initial-scale=1"]
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = favicon_link_tag asset_path('shadone-favicon.svg')
  body.text-main
    .flex.flex-col.min-h-screen
      .flex-grow
        header.w-full.sticky.top-0.bg-base.py-2.px-4
          .container
            .mx-auto.flex.justify-between.items-center
              = link_to image_tag('shadone.svg', alt: 'Shadone logo', width: '200px'), '#'
              .menu.text-main
                - if logged_in?
                  = link_to 'YouTube', root_path
                  = link_to 'Calendar', root_path
                  = link_to 'Profile', me_path
                  = link_to 'Logout', logout_path, method: :delete
                - else
                  = link_to 'Login', '/auth/google_oauth2', method: :post, class: 'btn btn-outline btn-primary bg-base-100'
        main.py-6
          .container.max-w-5xl
            = yield
      footer.w-full.bg-base-200.text-center.py-4.px-4
